{
    "name": "nuclio",
    "displayName": "nuclio-vscode",
    "description": "VScode extenstion for nuclio",
    "version": "0.0.1",
    "publisher": "nuclio",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:nuclioTreeProvider"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "nuclioTreeProvider",
                    "name": "Nuclio Functions"
                }
            ]
        },
        "commands": [
            {
                "command": "nuclioTreeProvider.invokeFunction",
                "title": "Invoke function"
            },
            {
                "command": "nuclioTreeProvider.deleteFunction",
                "title": "Delete function"
            },
            {
                "command": "nuclioTreeProvider.deployFunction",
                "title": "Deploy function"
            },
            {
                "command": "nuclioTreeProvider.createFunction",
                "title": "Create function"
            },
            {
                "command": "nuclioTreeProvider.deleteProject",
                "title": "Delete project"
            },
            {
                "command": "nuclioTreeProvider.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "nuclioTreeProvider.createEnvironment",
                "title": "Create environment",
                "icon": {
                    "light": "resources/light/CreateNewProject.svg",
                    "dark": "resources/dark/CreateNewProject.svg"
                }
            },
            {
                "command": "nuclioTreeProvider.createProject",
                "title": "Create project"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "nuclioTreeProvider.refresh",
                    "when": "view == nuclioTreeProvider",
                    "group": "navigation"
                },
                {
                    "command": "nuclioTreeProvider.createEnvironment",
                    "when": "view == nuclioTreeProvider",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "nuclioTreeProvider.deployFunction",
                    "when": "view == nuclioTreeProvider && viewItem == function",
                    "group": "1@1"
                },
                {
                    "command": "nuclioTreeProvider.invokeFunction",
                    "when": "view == nuclioTreeProvider && viewItem == function",
                    "group": "1@1"
                },
                {
                    "command": "nuclioTreeProvider.deleteFunction",
                    "when": "view == nuclioTreeProvider && viewItem == function",
                    "group": "2@1"
                },
                {
                    "command": "nuclioTreeProvider.createFunction",
                    "when": "view == nuclioTreeProvider && viewItem == project",
                    "group": "1@1"
                },
                {
                    "command": "nuclioTreeProvider.deleteProject",
                    "when": "view == nuclioTreeProvider && viewItem == project",
                    "group": "2@1"
                },
                {
                    "command": "nuclioTreeProvider.createProject",
                    "when": "view == nuclioTreeProvider && viewItem == environment",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "buffer": "^5.1.0",
        "fs-extra": "^5.0.0"
    }
}