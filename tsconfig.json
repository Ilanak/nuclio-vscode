{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "out",
        "sourceMap": true,
        "target": "es2016",
        "rootDir": "src",
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}