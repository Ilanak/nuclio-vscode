{
    "name": "nuclio",
    "displayName": "nuclio-vscode",
    "description": "VScode extenstion for nuclio",
    "version": "0.0.1",
    "publisher": "nuclio",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:nuclioTreeProvider"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "nuclioTreeProvider",
                    "name": "Nuclio Functions"
                }
            ]
        },
        "commands": [
            {
                "command": "nuclioTreeProvider.invokeFunction",
                "title": "Invoke function"
            },
            {
                "command": "nuclioTreeProvider.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "nuclioTreeProvider.refresh",
                    "when": "view == nuclioTreeProvider",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "nuclioTreeProvider.invokeFunction",
                    "when": "view == nuclioTreeProvider && viewItem == function",
                    "group": "1@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "axios": "^0.18.0"
    }
}